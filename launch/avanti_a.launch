<launch>

  <arg name="game_id"   default="a" />
  <arg name="ppkg"      default="$(find cultureid_games_tif22)" />

  <node name="cultureid_games_tif22_game_$(arg game_id)" pkg="cultureid_games_tif22" type="game_$(arg game_id).py" output="screen">
    <param name="dir_media"           value="$(arg ppkg)/gui_resources/$(arg game_id)_media" />
    <param name="dir_scripts"         value="$(arg ppkg)/gui_resources/$(arg game_id)_scripts" />
    <param name="rfid_java_exec_dir"  value="$(arg ppkg)/rfid_detection_resources/game_$(arg game_id)" />
    <rosparam command="load"          file="$(arg ppkg)/config/params_game_$(arg game_id).yaml" />
  </node>

</launch>
